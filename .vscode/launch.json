{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Attach to Chrome, with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "_doc": "TL;DR Start chrome in remote debug mode: chrome.exe --remote-debugging-port=9222. Attach Visual Studio: "Debug" -> "Attach to Process..." -> select the chrome instance. Done."
        }
    ]
}
